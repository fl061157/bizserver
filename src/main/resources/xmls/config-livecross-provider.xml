<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="liveCrossMrConnectionManager" class="cn.v5.rpc.cluster.MRClusterConnectionManagerSpring">
        <property name="group" value="${zk.group.livecross}"/>
        <property name="discoverURL" value="${zk.address}"/>
        <property name="executor" ref="mrServerExecutor"/>
        <property name="clusterType" value="rpcServer"/>
    </bean>

    <bean id="liveChatCrossHandler" class="com.handwin.server.controller.livechat.cross.LiveChatCrossHandler"/>

    <bean name="exportLiveCrossService" class="cn.v5.rpc.MRMessagePackInvokerServiceExporter">
        <property name="serviceUrl" value="rpc/livecross"/>
        <property name="service" ref="liveChatCrossHandler"/>
        <property name="serviceInterface" value="com.handwin.server.controller.livechat.cross.LiveChatCrossService"/>
        <property name="messagePack" ref="messagePack"/>
        <property name="connectionManager" ref="liveCrossMrConnectionManager"/>
        <property name="rpcServiceManager" ref="rpcServiceManager"/>
        <property name="perfetchSize" value="512"/>
        <property name="registry" ref="metrics"/>
    </bean>


</beans>